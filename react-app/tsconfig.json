{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx", 
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "node_modules/@types"
  ]
}
